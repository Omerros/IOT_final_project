<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_app"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnVerifyDeviceConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Device Connection"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status: "
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvStepCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step Count: "
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTargetValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter target value"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnStartWalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Walk"/>

</LinearLayout>
